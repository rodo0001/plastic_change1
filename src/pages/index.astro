    const videoSection = document.getElementById("clearvideo-section");

    videoSection.scrollIntoView(false);

    // videoSection.addEventListener("click", () => {
    //   console.log("click");
    // });

    scroll(() => {
      parallaxElements.forEach((el, index) => {
        const speed = 0.5; // Juster denne værdi for at ændre effekten
        const offset = el.getBoundingClientRect().top + window.pageYOffset;
        el.style.transform = `translateY(${(offset - window.scrollY) * speed}px)`;
        el.style.opacity = 1; // Fade ind, når de scroller ind
      });
    });
    // ------horisont-----------//
    scroll(
