---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
---




<section class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 p-6">
        <div>
          <h1 class="lg:text-left text-5xl text-[#F5F5F5]">Beskyt vores verden mod plastikforurening nu!</h1>
          <h1 class="text-3xl lg:text-5xl text-[#FF6F61]">#SingleUseSucks</h1>
        </div>

        <div class="relative border-corner max-w-[400px]">
          <Image src={WWE} alt="" class="absolute animate-float" />
          <!-- Boksen indhold -->
          <!-- <p class="text-gray-800">Dette er indholdet i boksen.</p> -->
          <div class="w-full max-w mx-auto">
            <form class="bg-transparent shadow-md rounded px-8 pt-6 pb-8">
              <h1 class="text-[#F5F5F5] pb-4">STØT OS HER</h1>

              <label class="md:w-2/3 block grid grid-cols-1 lg:grid-cols-2 gap-8">
                <div>
                  <input class="mr-2 leading-tight checked:bg-[#FF6F61] hover:bg-[#FF6F61]" type="checkbox" />
                  <span class="text-sm text-[#F5F5F5]">Engang</span>
                </div>
                <div>
                  <input class="mr-2 leading-tight checked:bg-[#FF6F61] hover:bg-[#FF6F61]" type="checkbox" />
                  <span class="text-sm text-[#F5F5F5]">Månedligt</span>
                </div>
              </label>

              <!-- Cirkler -->
              <div class="flex space-x-8 p-4">
                <div class="w-16 h-16 lg:w-20 lg:h-20 bg-white rounded-full flex items-center justify-center text-grey cursor-pointer transition-colors duration-300">50,-</div>
                <div class="w-16 h-16 lg:w-20 lg:h-20 bg-white rounded-full flex items-center justify-center text-grey cursor-pointer transition-colors duration-300">75,-</div>
                <div class="w-16 h-16 lg:w-20 lg:h-20 bg-white rounded-full flex items-center justify-center text-grey cursor-pointer transition-colors duration-300">125,-</div>
              </div>

              <div class="mb-4">
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Andet beløb.." />
              </div>

              <div class="flex justify-center items-center">
                <button class="bg-[#FF6F61] hover:bg-[#D05C50] text-white p-4 rounded-[10px] focus:outline-none focus:shadow-outline" type="button">Støt nu!</button>
              </div>
            </form>
          </div>
          <!-- Custom CSS til at skabe hjørnebordere -->
          <style>
            .border-corner {
              position: relative;
            }

            /* Øverste venstre hjørne - vandret linje */
            .border-corner::before {
              content: "";
              position: absolute;
              top: -15px; /* 15px udenfor boksen */
              left: -15px; /* 15px udenfor boksen */
              width: 120px; /* Juster længden */
              height: 1px; /* Tykkelse af linjen */
              background-color: white;
            }

            /* Øverste venstre hjørne - lodret linje */
            .border-corner::after {
              content: "";
              position: absolute;
              top: -15px; /* 5px udenfor boksen */
              left: -15px; /* 5px udenfor boksen */
              width: 1px; /* Tykkelse af linjen */
              height: 80px; /* Juster længden */
              background-color: white;
            }

            /* Nederste højre hjørne - vandret linje */
            .border-corner-bottom::before {
              content: "";
              position: absolute;
              bottom: -15px; /* 5px udenfor boksen */
              right: -15px; /* 5px udenfor boksen */
              width: 120px; /* Juster længden */
              height: 1px; /* Tykkelse af linjen */
              background-color: white;
            }

            /* Nederste højre hjørne - lodret linje */
            .border-corner-bottom::after {
              content: "";
              position: absolute;
              bottom: -15px; /* 5px udenfor boksen */
              right: -15px; /* 5px udenfor boksen */
              width: 1px; /* Tykkelse af linjen */
              height: 80px; /* Juster længden */
              background-color: white;
            }
          </style>

          <!-- Nederste højre hjørne -->
          <div class="border-corner-bottom"></div>
        </div>
      </div>
    </section>

    <script>
    // Hent cirklerne
    const circles = document.querySelectorAll(".flex div");

    // Loop gennem hver cirkel og tilføj event listener
    circles.forEach((circle) => {
      circle.addEventListener("click", function () {
        // Fjern den specifikke farve fra alle cirkler
        circles.forEach((c) => c.classList.remove("bg-color-change"));
        // Tilføj den specifikke farve til den klikkede cirkel
        this.classList.add("bg-color-change");
      });
    });
  </script>